{
  "name": "hardhat-project",
  "scripts": {
    "test": "hardhat test",
    "test-update-snapshots": "CHAI_SNAPSHOT_UPDATE=true hardhat test",
    "start": "CHAI_SNAPSHOT_UPDATE=true npm test && hardhat watch test",
    "compile": "hardhat compile",
    "deploy-mainnet": "hardhat --network mainnet deploy --reset --export deployments/mainnet.json",
    "deploy-apothem": "hardhat --network apothem deploy --export deployments/apothem.json",
    "remixd": "remixd -s ./ -u https://remix.ethereum.org",
    "gas": "REPORT_GAS=true npm test",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@remix-project/remixd": "^0.6.6",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.15",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solc": "^0.7.3",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "web3": "^1.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.0-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "^3.2.2-solc-0.7",
    "@openzeppelin/hardhat-upgrades": "^1.21.0"
  }
}
